<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:navigationIconTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last updated: January 17, 2026"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp" />

                <!-- Agreement to Terms -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Agreement to Terms"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By accessing and using SellasticPots, you accept and agree to be bound by the terms and provisions of this agreement. If you do not agree to these terms, please do not use our app."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Use of Service -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Use of Service"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You agree to:\n\n• Provide accurate and complete information\n• Maintain the security of your account\n• Not share your account credentials\n• Use the app only for lawful purposes\n• Not engage in fraudulent activities\n• Respect intellectual property rights"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Product Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Product Information"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We strive to display accurate product information including descriptions, prices, and availability. However, we do not guarantee that all information is complete, accurate, or current. Prices are subject to change without notice."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Orders and Payment -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Orders and Payment"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• All orders are subject to availability and acceptance\n• We reserve the right to refuse or cancel any order\n• Payment must be received before order processing\n• Prices include applicable taxes unless stated otherwise\n• Shipping costs are additional and calculated at checkout"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Shipping and Delivery -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Shipping and Delivery"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery times are estimates and not guaranteed. We are not liable for delays caused by shipping carriers or circumstances beyond our control. Risk of loss transfers to you upon delivery to the carrier."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Returns and Refunds -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Returns and Refunds"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Returns accepted within 7 days of delivery\n• Items must be unused and in original packaging\n• Handcrafted items may have slight variations\n• Refunds processed within 5-7 business days\n• Shipping costs are non-refundable\n• Custom orders are non-returnable"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- User Content -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. User Content"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By posting reviews or other content, you grant us a non-exclusive, royalty-free license to use, reproduce, and display such content. You are responsible for the accuracy of your content and must not post offensive, defamatory, or illegal material."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Limitation of Liability -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Limitation of Liability"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We are not liable for indirect, incidental, special, or consequential damages arising from your use of the app or purchase of products. Our total liability is limited to the amount you paid for the product."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Termination -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9. Termination"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We reserve the right to terminate or suspend your account at any time for violations of these terms. Upon termination, your right to use the app will immediately cease."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Changes to Terms -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10. Changes to Terms"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We reserve the right to modify these terms at any time. We will notify users of significant changes via email or app notification. Continued use of the app after changes constitutes acceptance of the new terms."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Contact Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11. Contact Information"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For questions about these Terms and Conditions, contact us at:\n\nEmail: support@sellasticpots.com\nPhone: +1 (555) 123-4567\nAddress: 123 Pottery Lane, Artisan City, AC 12345"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
