<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:navigationIconTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last updated: January 17, 2026"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp" />

                <!-- Introduction -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Introduction"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome to SellasticPots. We are committed to protecting your personal information and your right to privacy. This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use our mobile application."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Information We Collect -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Information We Collect"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We collect the following types of information:\n\n• Personal Information: Name, email address, phone number\n• Account Information: Username, password (encrypted)\n• Order Information: Purchase history, cart items\n• Device Information: Device type, operating system\n• Usage Data: App interactions, preferences"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- How We Use Your Information -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. How We Use Your Information"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We use your information to:\n\n• Provide and maintain our services\n• Process your orders and transactions\n• Send order confirmations and updates\n• Improve our app and user experience\n• Respond to your comments and questions\n• Send marketing communications (with your consent)\n• Detect and prevent fraud"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Data Security -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Data Security"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We implement appropriate security measures to protect your personal information. Your data is stored securely using Firebase services with encryption. However, no method of transmission over the internet is 100% secure, and we cannot guarantee absolute security."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Your Rights -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Your Rights"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have the right to:\n\n• Access your personal data\n• Correct inaccurate data\n• Request deletion of your data\n• Object to data processing\n• Export your data\n• Withdraw consent at any time"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Data Retention -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Data Retention"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We retain your personal information only for as long as necessary to fulfill the purposes outlined in this Privacy Policy. When you delete your account, we will delete or anonymize your personal information within 30 days."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Third-Party Services -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Third-Party Services"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our app uses the following third-party services:\n\n• Firebase (Authentication, Database): Google Inc.\n• Payment Processors: For secure transactions\n\nThese services have their own privacy policies and we encourage you to review them."
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <!-- Contact Us -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. Contact Us"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any questions about this Privacy Policy, please contact us at:\n\nEmail: privacy@sellasticpots.com\nPhone: +1 (555) 123-4567"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
