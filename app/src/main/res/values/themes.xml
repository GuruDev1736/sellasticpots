<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light mode only -->
    <style name="Base.Theme.Sellasticpots" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/secondary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/secondary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="Theme.Sellasticpots" parent="Base.Theme.Sellasticpots" />
</resources>